#include <stdio.h>

int main() {
    int N;

    // รับค่าจากผู้ใช้
    printf("Enter value:\n");

    // ตรวจสอบว่าอินพุตเป็นตัวเลขหรือไม่
    if (scanf("%d", &N) != 1) {
        printf("Please press the number\n");
        return 0; // จบการทำงานทันที
    }

    printf("Series: ");

    // ตรวจสอบว่าเป็นเลขคี่หรือเลขคู่
    if (N % 2 == 1) { // เลขคี่
        for (int i = 1; i <= N; i += 2) {
            printf("%d ", i);
        }
    } else { // เลขคู่
        for (int i = N; i >= 0; i -= 2) {
            printf("%d ", i);
        }
    }

    return 0;
}
